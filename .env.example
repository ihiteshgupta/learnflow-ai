# ===================================
# Dronacharya Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values
# All CRITICAL variables must be set for the app to start

# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Build Configuration
# Set to 'true' to skip environment validation during builds
# Useful for CI/CD pipelines where production values aren't available at build time
SKIP_ENV_VALIDATION=false

# ===================================
# Database (CRITICAL - Required)
# ===================================
# PostgreSQL connection string
# Development: postgresql://user:password@localhost:5432/dronacharya
# Production: Must be a remote database (not localhost)
# For testing without DB: Use 'mock' (dev/test only)
DATABASE_URL=postgresql://user:password@localhost:5432/dronacharya
DATABASE_POOL_SIZE=10

# ===================================
# Redis (CRITICAL - Required)
# ===================================
# Used for rate limiting and caching
# Production: Use rediss:// for TLS
REDIS_URL=redis://localhost:6379

# ===================================
# Authentication (CRITICAL - Required)
# ===================================
# Must be 32+ characters, random and secure
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change-this-to-a-secure-random-string-at-least-32-characters
NEXTAUTH_URL=http://localhost:3000
# Production: https://www.dronacharya.app

# Public API URL (for client-side API calls)
NEXT_PUBLIC_API_URL=http://localhost:3000/api
# Production: https://api.dronacharya.app

# ===================================
# Azure (Production Only)
# ===================================
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_TENANT_ID=
# AZURE_SUBSCRIPTION_ID=

# ===================================
# AI APIs (CRITICAL - Required)
# ===================================
# Anthropic Claude API (Primary AI model)
# Get your key from: https://console.anthropic.com/
# Must start with: sk-ant-
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API (Optional fallback)
# Get your key from: https://platform.openai.com/
# Must start with: sk-
OPENAI_API_KEY=sk-your-openai-key-here

# AI Model Configuration
AI_MODEL_PRIMARY=claude-sonnet-4-20250514
AI_MODEL_FALLBACK=gpt-4o

# ===================================
# Vector Database (CRITICAL - Required)
# ===================================
# Qdrant for RAG (Retrieval-Augmented Generation)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ===================================
# Feature Flags
# ===================================
ENABLE_GAMIFICATION=true
ENABLE_AI_PROCTORING=false

# ===================================
# Rate Limiting
# ===================================
# Maximum AI requests per minute per user
MAX_AI_REQUESTS_PER_MINUTE=30
